<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.byu.cs.tweeter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mars"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mars"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="TMars.activities.OpenActivity"
            android:label="@string/title_activity_open"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="TMars.activities.SetupActivity"
            android:label="@string/title_activity_setup">
        </activity>
        <activity
            android:name="TMars.activities.TableauActivity"
            android:label="@string/title_activity_tableau">
        </activity>
    </application>

</manifest>